log             none

variable        vT              equal   2000
variable        vTSC            equal   1000
variable        vP              equal   0.0
variable        vRunStep        equal   200000
variable        vRunStepSC      equal   50000
variable        vThermoStep     equal   10000
variable        vSeed           equal   4587281
variable        vInDataPath     string  lmp/data/CuFCC108.lmpdat
variable        vOutRestartPath string  .temp/lmp/restart/melt-sc-init-Cu108


units           metal
boundary        p p p

read_data       ${vInDataPath}

pair_style      lj/cut  3.6
pair_coeff      1 1 0.167 2.314  3.6
timestep        0.002
velocity        all create ${vT} ${vSeed} dist gaussian mom yes rot yes

thermo          ${vThermoStep}
thermo_style    custom step temp press vol pe ke etotal enthalpy
thermo_modify   flush yes

fix             1 all npt temp ${vT} ${vT} 0.2 iso ${vP} ${vP} 2
run             ${vRunStep}
unfix           1
fix             2 all npt temp ${vTSC} ${vTSC} 0.2 iso ${vP} ${vP} 2
run             ${vRunStepSC}

write_restart   ${vOutRestartPath}
