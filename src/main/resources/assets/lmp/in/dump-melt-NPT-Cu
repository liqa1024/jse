log             none

variable        vT              equal   2000
variable        vP              equal   0.0
variable        vTimestep       equal   0.002
variable        vCooldownTdamp  equal   0.2
variable        vRunStep        equal   200000
variable        vThermoStep     equal   10000
variable        vDumpStep       equal   10000
variable        vSeed           equal   4587281
variable        vInDataPath     string  lmp/data/Cu108.lmpdat
variable        vDumpPath       string  lmp/.temp/dump/Cu108.lammpstrj


units           metal
boundary        p p p

read_data       ${vInDataPath}
timestep        ${vTimestep}

pair_style      lj/cut  3.6
pair_coeff      1 1 0.167 2.314 3.6

velocity        all create ${vT} ${vSeed} dist gaussian mom yes rot yes

thermo          ${vThermoStep}
thermo_style    custom step temp press vol pe ke etotal enthalpy
thermo_modify   flush yes

dump            1 all custom ${vDumpStep} ${vDumpPath} id type x y z

fix             1 all npt temp ${vT} ${vT} ${vCooldownTdamp} iso ${vP} ${vP} 2
run             ${vRunStep}
